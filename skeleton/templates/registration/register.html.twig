{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background: #fff;
        max-height: 100vh;
    }

    header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 40px 100px;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: 0.5s;
        margin-bottom: 100px;
    }

    header.sticky {
        background: #0077B6;
        padding: 20px 100px;
    }

    header.sticky .logo {
        color: #FFF;
    }

    header.sticky ul li a {
        color: #FFF;
    }

    header .logo {
        text-decoration: none;
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 700;
        font-size: 40px;
        line-height: 60px;
        display: flex;
        align-items: center;
        text-align: center;
        margin: 0 15px;

        color: #2B5AA0;
    }

    header ul {
        position: relative;
        display: flex;
    }

    header ul li {
        position: relative;
        list-style: none;
        margin-right: 50px;
    }

    header ul li a {
        position: relative;
        display: inline-block;
        margin: 0 15px;
        font-family: 'Poppins';
        font-style: normal;
        font-weight: 300;
        font-size: 21px;
        line-height: 32px;
        text-align: center;
        text-decoration: none;
        color: #03045E;
    }

    header ul li a:hover {
        color: darkorange;
    }

    header ul li a span {
        background: #2B5AA0;
        border-radius: 16px;
        color: #FFF;
        padding: 12px 22px;
        transition: 0.2s;
    }

    header ul li a span:hover {
        opacity: 0.8;
    }

    header.sticky ul li a span {
        background: #FFF;
        color: #2B5AA0;
    }

    .loginCtn {
        width: 80%;
        display: flex;
        margin: 0 auto;
        height: 60vh;
        border: 3px solid rgba(92, 89, 89, 0.08);
        margin-top: 20vh;
    }

    .imgLog {
        width: 50%;
        background: lightblue;
    }

    .formLog {
        width: 40%;
        display: flex;
        flex-direction: column;
        margin: 50px 100px;
    }

    .formLog h1 {
        text-align: center;
        font-family: 'Inter', sans-serif;
        font-style: normal;
        font-weight: 200;
        font-size: 48px;
        line-height: 58px;
    }

    .formLog label {
        font-family: 'Inter';
        font-style: regular;
        font-weight: 400;
        font-size: 22px;
        line-height: 29px;
        color: #000000;
        margin: 15px 0;
    }

    .formLog input {
        border: none;
        background: #fff;
        font-family: 'Inter';
        font-style: normal;
        font-weight: 500;
        font-size: 14px;
        line-height: 17px;
        padding: 11px 0;
        border-bottom: 1px solid #000000;

    }

    .formLog button {
        font-family: 'Inter';
        color: #FFF;
        font-style: normal;
        font-weight: 500;
        font-size: 24px;
        line-height: 29px;
        display: flex;
        align-items: center;
        text-align: center;
        background: #627EA9;
        border-radius: 21px;
        border: none;
        width: 150px;
        padding: 14px 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.1s;
        margin: 0 auto;
        margin-top: 50px;
    }

    .formLog button:hover {
        background: #627EA9;
        opacity: 0.8;
        cursor: pointer;
    }

    .formGrp {

        display: flex;
        flex-direction: column;
        margin-top: 4em;
    }

    .formGrp a {
        text-align: end;
        margin-top: 15px
    }

    @media screen (max-width : 1000px) {
        .hide {
            display: none;
        }
    }
</style>

<!-- Header -->
<div id="header"></div>
<header class="main_header" id="header">

    <a href="#" class="logo">Startup</a>
    <div class="toggle"></div>
    <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">Community</a></li>
        <li><a href="#"><span>Login</span></a></li>
    </ul>
</header>
<!-- Fin Header -->

<div class="loginCtn">
    <div class="imgLog hide">

    </div>
    <div class="formLog">



        <h1>Register</h1>
        <div class="formGrp">
            {{ form_start(registrationForm) }} <br>
            {{ form_row(registrationForm.email) }} <br>
            {{ form_row(registrationForm.plainPassword, { label: 'Password'}) }}

            
            {{ form_end(registrationForm) }}
            <button type="submit" class="btn">Register</button>

        </div>
    </div>


    {% endblock %}