{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block body %}


    <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        body {
            background: #fff;
            max-height: 100vh;
        }



        .loginCtn{
            width: 80%;
            display: flex;
            margin: 0 auto;
            height: 60vh;
            border: 3px solid rgba(92, 89, 89, 0.08);
            margin-top: 20vh;
        }
        .imgLog{
            width: 50%;
            background: lightblue;
        }
        .formLog{
            width: 40%;
            display: flex;
            flex-direction: column;
            margin : 50px 100px;
        }
        .formLog h1{
            text-align: center;
            font-family: 'Inter', sans-serif;
            font-style: normal;
            font-weight: 200;
            font-size: 48px;
            line-height: 58px;
        }

        .formLog label{
            font-family: 'Inter';
            font-style: regular;
            font-weight: 400;
            font-size: 22px;
            line-height: 29px;
            color: #000000;
            margin: 15px 0;
        }

        .formLog input{
            border: none;
            background: #fff;
            font-family: 'Inter';
            font-style: normal;
            font-weight: 500;
            font-size: 14px;
            line-height: 17px;
            padding: 11px 0;
            border-bottom: 1px solid #000000;

        }

        .formLog button{
            font-family: 'Inter';
            color: #FFF;
            font-style: normal;
            font-weight: 500;
            font-size: 24px;
            line-height: 29px;
            display: flex;
            align-items: center;
            text-align: center;
            background: #627EA9;
            border-radius: 21px;
            border: none;
            width: 150px;
            padding: 14px 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.1s;
            margin : 0 auto;
            margin-top: 50px;
        }

        .formLog button:hover{
            background: #627EA9;
            opacity: 0.8;
            cursor: pointer;
        }
        .formGrp {
            
            display: flex;
            flex-direction: column;
            margin-top: 4em;
        }

        .formGrp a{
            text-align: end;
            margin-top: 15px
        }

        @media screen and (max-width: 570px) {
                header .logo {
                    display: none;
                }
                header ul {
                    width: auto;
                    margin: 0 auto;
                }
            }
    </style>


<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <div class="loginCtn">
        <div class="imgLog hide">

        </div>
        <div class="formLog">
            <h1 class="h3 mb-3 font-weight-normal">USER LOGIN</h1>
                <div class="formGrp">
                            <label for="inputEmail">EMAIL</label>
                            <input placeholder="TYPE YOUR EMAIL ..." type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus> <br>
                            <label for="inputPassword">PASSWORD</label>
                            <input placeholder="PASSWORD ..." type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                                >
                            <a href=""> Forget password ? </a>
                    <button class="btn btn-lg btn-primary" type="submit">
                        LOGIN
                    </button>
                </div>
        </div>
        

    </div>
</form>

<p class="text-center">
                    Don't have an account?
                    <a href="{{ path('app_register') }}">Register</a>
                </p>

{% endblock %}
