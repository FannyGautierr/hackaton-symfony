{% extends 'base.html.twig' %}

{% block title %}Hello StationController!{% endblock %}

{% block body %}
<style>
    *{
        font-family: Poppins, sans-serif;
    }
  .header-station {
    display: flex;
    justify-content: center;
      gap: 50px;
    align-items: center;

  }
  h1{
      font-style: normal;
      font-weight: 700;
      font-size: 64px;
      line-height: 96px;
      text-align: center;
      color: #234983;
  }
  .header-station p {
    font-size: 32px;
    font-weight: 700;
    color: #000;
      width: 50%;
  }
  .all-pistes{
      display:grid;
      grid-template-columns: 1fr 1fr ;
  }

    div.hide {
        display: none;
    }

  .all-lifts{
      display: flex;
      flex-direction: column;
      gap: 50px;
      justify-content: center;
  }
  .single-lift{
      padding-top: 20px;
      height: 500px;
      background: #F4F4F4;
      box-shadow: 4px 4px 18px rgba(0, 0, 0, 0.65);
      border-radius: 30px;
      text-align: center;
  }
  .single-lift h2{
      color: #234983;
      font-weight: 500;
  }
  .single-lift p{
      font-weight: bold;
  }

  .lift-infos{
      display: flex;
      justify-content: space-around;
      align-items: center;
      flex-direction: row-reverse;
      color: #A2AEC0;
  }

    .lift-infos img{
        width: 50%;
        height: 60%;
    }

  .lift-hours{
      display: flex;
      justify-content: center;
      flex-direction: column;
  }
</style>

<div class="example-wrapper">
<h1>{{ stations.name }}</h1>
    <div class="header-station">
        <img src="https://www.lessaisies.com/templates/OT2016/images/logo_les_saisies.png" alt="">
        <p>{{ stations.description }}</p>
    </div>

    <div class="navigation">
        <button id="skitrack-btn">‚õ∑Les pistes</button>
        <button id="skilift-btn">üö°Les remont√©es</button>
    </div>

    <div class="les-pistes">
        <p>Trier par : Nom de A √† Z </p>

        <div class="all-pistes">
            {% for pistes in stations.skiTracks %}
            <div class="piste">
                <h2>{{ pistes.name }}</h2>
                <p>{{ pistes.open|date('H:i:s') }}</p>
                <p>{{ pistes.close|date('H:i:s') }}</p>
                <p>{{ pistes.difficulty }}</p>
            {% endfor %}
            </div>
        </div>

    </div>


        {# Adam / remont√©es #}

        <div class="hide all-lifts">
            {% for lift in stations.skiLifts %}
            <div class="single-lift">
                <h2>{{ lift.name }}</h2>
                {% if lift.information %}
                    <p>‚ö†Ô∏è{{ lift.information }}</p>
                {% endif %}
                <div class="lift-infos">
                <img src="{{ asset('img/skilift.png') }}" alt="">
                    <div class="lift-hours">
                        {% for day in days %}
                        <p>{{ day }} : {{ lift.open|date('H:i:s') }} - {{ lift.close|date('H:i:s') }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}
