{% extends 'base.html.twig' %}

{% block title %}Hello StationController!{% endblock %}

{% block body %}
<style>
    *{
        font-family: Poppins, sans-serif;
    }
  .header-station {
    display: flex;
    justify-content: center;
      gap: 50px;
    align-items: center;

  }
  h1{
      font-style: normal;
      font-weight: 700;
      font-size: 64px;
      line-height: 96px;
      text-align: center;
      color: #234983;
  }
  .header-station p {
    font-size: 32px;
    font-weight: 700;
    color: #000;
      width: 50%;
  }
  .navigation{
      font-weight: 500;
      font-size: 64px;
      line-height: 96px;
      color: #234983;
      text-align: center;
    display: flex;
      flex-direction: row;
      gap: 56px;
      justify-content: center;
      align-items: center;
  }


div.hide {
    display: none;
}

  .all-lifts{
      display: flex;
      flex-direction: column;
      gap: 50px;
      justify-content: center;
  }
  .single-lift{
      margin: 0 auto;
      padding-top: 20px;
      width: 60%;
      height: 500px;
      background: #F4F4F4;
      box-shadow: 4px 4px 18px rgba(0, 0, 0, 0.65);
      border-radius: 30px;
      text-align: center;
  }
  .single-lift h2{
      color: #234983;
      font-weight: 500;
  }
  .single-lift p{
      font-weight: bold;
  }

  .lift-infos{
      display: flex;
      justify-content: space-around;
      align-items: center;
      flex-direction: row-reverse;
      color: #A2AEC0;
  }

    .lift-infos img{
        width: 50%;
        height: 60%;
    }

  .lift-hours{
      display: flex;
      justify-content: center;
      flex-direction: column;
  }

  .all-pistes{
      display:flex;
      flex-wrap: wrap;
      flex-direction: row;
      display: grid;
      grid-template-columns: 1fr 1fr ;
      gap: 20px;
      margin-top: 60px;
  }
  .piste{
      background: #F4F4F4;
      box-shadow: 4px 4px 18px rgba(0, 0, 0, 0.65);
      border-radius: 33px;
      padding: 30px;
      height: fit-content;

     margin: 40px;

  }
  .close{
      opacity: 0.5;
  }

  .trier{
      font-weight: 500;
      font-size: 48px;
      line-height: 48px;
      color: #234983;

      margin: 60px;
  }
  .name{
      text-align: center;
      font-weight: 500;
      font-size: 64px;

      color: #234983;

  }
  .trier::after{

      content: " ";
      display: inline-block;
      width: 0;
      height: 0;
      margin-left: 10px;
      vertical-align: middle;
      border-top: 20px solid;
      border-right: 20px solid transparent;
      border-left: 20px solid transparent;

  }
  .piste p{
     color: #627EA9;
      font-size: 36px;

  }
    .important{
    font-size: 36px;
    color: black;
    }

.logo{
    width: 30%;
    height: 30%;
}
</style>

<div class="example-wrapper">
<h1>{{ stations.name }}</h1>
    <div class="header-station">
        <img src="https://www.lessaisies.com/templates/OT2016/images/logo_les_saisies.png" alt="" class="logo">
        <p>{{ stations.description }}</p>
    </div>



    <div class="les-pistes">
        <div class="navigation" ><p id="skitrack-btn">‚õ∑Ô∏èLes pistes</p>  <p id="skilift-btn">üö°Les remont√©es</p> </div>
        <p class="trier">Trier par :<b> Nom de A √† Z</b> </p>

        <div class="all-pistes">
            {% for pistes in stations.skiTracks %}
                {% if pistes.exception %}
                   <div class="piste close">

            {% else %}
                    <div class="piste open">
                {% endif %}

                <h2 class="name">{{ pistes.name }}</h2>
                <p> üï¢ {{ pistes.open|date('H:i:s') }} - {{ pistes.close|date('H:i:s') }}</p>

                        {% if pistes.difficulty == "Rouge" %}
                            <p class="difficulty">üî¥ {{ pistes.difficulty }}</p>
                        {% elseif pistes.difficulty == "Verte" %}
                            <p class="difficulty">üü¢ {{ pistes.difficulty }}</p>
                        {% elseif pistes.difficulty == "Bleue" %}
                            <p class="difficulty">üîµ {{ pistes.difficulty }}</p>
                        {% elseif pistes.difficulty == "Noire" %}
                            <p class="difficulty">‚ö´Ô∏è {{ pistes.difficulty }}</p>
                        {% endif %}



                {% if pistes.information != null %}
                <span class="important"> ‚ö†Ô∏è <b>{{ pistes.information }}</b></span>
                {% endif %}
             </div>

            {% endfor %}

        </div>

    </div>


        {# Adam / remont√©es #}

        <div class="all-lifts hide">
            {% for lift in stations.skiLifts %}
            <div class="single-lift">
                <h2>{{ lift.name }}</h2>
                {% if lift.information %}
                    <p>‚ö†Ô∏è{{ lift.information }}</p>
                {% endif %}
                <div class="lift-infos">
                <img src="{{ asset('img/skilift.png') }}" alt="">
                    <div class="lift-hours">
                        {% for day in days %}
                        <p>{{ day }} : {{ lift.open|date('H:i:s') }} - {{ lift.close|date('H:i:s') }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}
