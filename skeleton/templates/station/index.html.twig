{% extends 'base.html.twig' %}

{% block title %}Hello StationController!{% endblock %}

{% block body %}
<style>
    *{
        font-family: Poppins, sans-serif;
    }
  .header-station {
    display: flex;
    justify-content: center;
      gap: 50px;
    align-items: center;

  }
  h1{
      font-style: normal;
      font-weight: 700;
      font-size: 64px;
      line-height: 96px;
      text-align: center;
      color: #234983;
  }
  .header-station p {
    font-size: 32px;
    font-weight: 700;
    color: #000;
      width: 50%;
  }
  .all-pistes{
      display:grid;
      grid-template-columns: 1fr 1fr ;
  }
</style>

<div class="example-wrapper">
<h1>{{ stations.name }}</h1>
    <div class="header-station">
        <img src="https://www.lessaisies.com/templates/OT2016/images/logo_les_saisies.png" alt="">
        <p>{{ stations.description }}</p>
    </div>


    <div class="les-pistes">
        <div class="navigation">‚õ∑Ô∏èLes pistes  üö°Les remont√©es </div>
        <p>Trier par : Nom de A √† Z </p>

        <div class="all-pistes">
            {% for pistes in stations.skiTracks %}
            <div class="piste">
                <h2>{{ pistes.name }}</h2>
                <p>{{ pistes.open|date('H:i:s') }}</p>
                <p>{{ pistes.close|date('H:i:s') }}</p>
                <p>{{ pistes.difficulty }}</p>
            {% endfor %}
        </div>

    </div>

</div>
{% endblock %}
