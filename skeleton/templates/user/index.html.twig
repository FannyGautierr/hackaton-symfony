{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    background: #fff;
}

header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 40px 100px;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: 0.5s;
    margin-bottom: 100px;
    z-index: 10000;
}

header.sticky {
    background: #0077B6;
    padding: 20px 100px;
}

header.sticky .logo {
    color: #FFF;
}

header.sticky ul li a {
    color: #FFF;
}

header .logo {
    text-decoration: none;
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 700;
    font-size: 40px;
    line-height: 60px;
    display: flex;
    align-items: center;
    text-align: center;
    margin: 0 15px;

    color: #fff;
}

header ul {
    position: relative;
    display: flex;
}

header ul li {
    position: relative;
    list-style: none;
    margin-right: 50px;
}

header ul li a {
    position: relative;
    display: inline-block;
    margin: 0 15px;
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 300;
    font-size: 21px;
    line-height: 32px;
    text-align: center;
    text-decoration: none;
    color: #fff;
}

header ul li a:hover {
    color: darkorange;
}

header ul li a span {
    background: #2B5AA0;
    border-radius: 16px;
    color: #FFF;
    padding: 12px 22px;
    transition: 0.2s;
}

header ul li a span:hover {
    opacity: 0.8;
}

header.sticky ul li a span {
    background: #FFF;
    color: #2B5AA0;
}


.banner {
    padding: 200px 100px;
    position: relative;
    min-height: 80vh;
    display: flex;
    justify-content: space-between;
    align-items: center;

    background:rgba(0, 0, 0, 0.7)url(../img/monty.png);
    background-blend-mode: darken;
    background-size: cover;
    z-index: -200;
}

.banner img {
    /* display: flex; */
    position: right;
    width: 400px;
}

.banner h2 {
    font-size: 3em;
    color: #fff;
    font-weight: 500;
    line-height: 1.5em;
}

.banner h2 span {
    /* font-size: 1.5em; */
    font-family: 'Inter';
    font-style: normal;
    font-weight: 500;
    font-size: 70px;
    line-height: 85px;
}

.banner h3 {
    /* font-size: 1.5em; */
    color: #fff;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 200;
    font-size: 30px;
    line-height: 36px;
}


.contain {
    background: #EFF1FB;
    box-shadow: 8px 8px 8px rgba(0, 0, 0, 0.3);
    border-radius: 47px;
    width: 80%;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    margin-top: -100px;
    z-index: 800;
}

.contain img {
    border-radius: 500px;
    margin: 0 auto;
    z-index: 8000;
    margin-top: -190px;
}

.contain .account {
    width: 100%;
}

.contain .account h2 {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 700;
    font-size: 40px;
    line-height: 48px;

    display: flex;

    align-items: center;

    padding: 0 80px;

    color: #2D62B1;


    height: 172px;
    background: #FFFFFF;
    box-shadow: 4px 0px 4px rgba(0, 0, 0, 0.05);
    border-radius: 15px 15px 0px 0px;
}

.contain .account .infBx {
    height: 100%;
    padding-bottom: 30px;
}

.contain .account .infBx h3 {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 300;
    font-size: 24px;
    line-height: 29px;
    margin-top: 42px;
    margin-bottom: 48px;
    margin-left: 75px;
    /* identical to box height */


    color: #8899AA;
}

.contain .account .infBx .con label {

    font-family: 'Inter';
    font-style: normal;
    font-weight: 700;
    font-size: 28px;
    line-height: 34px;
    /* identical to box height */


    color: #234983;

}

.contain .account .infBx .con {
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.contain .account .infBx .con .lbl{
    display: flex;
    flex-direction: column;
}

.contain .account .infBx .con .lbl input {
    gap: 21px;
    border: none;
    background: #FFFFFF;
    box-shadow: 2px 4px 4px rgba(96, 96, 96, 0.2);
    border-radius: 9px;

    width: 380px;
    height: 70px;

    padding: 0 20px;

    margin-top: 21px;

    font-family: 'Inter';
font-style: normal;
font-weight: 100;
font-size: 20px;
line-height: 29px;
/* identical to box height */


color: rgba(98, 126, 169, 0.45);
}

.contain .account .infBx button{
    font-family: 'Inter';
    color: #FFF;
    font-style: normal;
    font-weight: 500;
    font-size: 24px;
    line-height: 29px;
    display: flex;
    align-items: center;
    text-align: center;
    background: #627EA9;
    border-radius: 21px;
    border: none;
    width: 150px;
    padding: 14px 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: 0.1s;
    margin : 0 auto;
    margin-top: 50px;
}

.contain .account .infBx button:hover{
    background: #627EA9;
    opacity: 0.8;
    cursor: pointer;
}




@media screen and (max-width: 570px) {
    header .logo {
        display: none;
    }

    header ul {
        width: auto;
        margin: 0 auto;
    }
}
</style>







    <section class="banner overlay">
        <div class="textBx">
            <h2> Hello Adam !</h2>
            <h3>This is your profile page. You can see the progress you've made with your work and manage your projects or assigned tasks</h3>
        </div>
    </section>


    <section class="contain">
        <img src="img/mec.png" alt="">
        <div class="account">
            <h2>My Account</h2>
            <div class="infBx">
                <h3>USER INFORMATION</h3> <br>
                <div class="con">
                    <div class="lbl">
                        <label for="inputEmail">EMAIL</label> 
                        <input placeholder="TYPE YOUR EMAIL ..." type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus> 
                    </div>

                    <div class="lbl">
                        <label for="inputPassword">PASSWORD</label> 
                        <input placeholder="PASSWORD ..." type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>    
                    </div>
                </div>
                <br>

                <button class="btn btn-lg btn-primary" type="submit">
                    Confirm
                </button>


            </div>
        </div>
    </section>




    <script>
            window.addEventListener('scroll',function(){
            var header = document.querySelector('header');
            header.classList.toggle('sticky',window.scrollY > 0);
        });
    </script>
{% endblock %}
